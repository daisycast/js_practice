var bday=window.prompt ("when is your birthday?");

var d = new Date(bday);
var n= d.getDay(d);



if(n==0){document.write("You were born on a Sunday");}
if(n==1){document.write("You were born on a Monday");}
if(n==2){document.write("You were born on a Tuesday");}
if(n==3){document.write("You were born on a Wednesday");}
if(n==4){document.write("You were born on a Thursday");}
if(n==5){document.write("You were born on a Friday");}
if(n==6){document.write("You were born on aSaturday");}
